<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.savedScreen.detailSaveScreen.DetailSaveFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back_movies_details_movies_save_fragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/iv_back_details_save_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_back"
            android:layout_margin="15dp"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:id="@+id/iv_start_off_detal_movies_save_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_start_on_detal_movies_save_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            />

            <ImageView
                android:id="@+id/iv_posster_movies_details_save_fragment"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/iv_back_movies_details_movies_save_fragment"
                />

            <TextView
                android:id="@+id/tv_name_movies_details_save_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/iv_back_movies_details_movies_save_fragment"
                android:layout_toRightOf="@id/iv_posster_movies_details_save_fragment"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_genres_movies_details_save_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_below="@id/tv_name_movies_details_save_fragment"
                android:layout_toRightOf="@id/iv_posster_movies_details_save_fragment"
                android:textSize="12sp"
                 />

            <View
                android:id="@+id/view_detail_save_fragment"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/iv_posster_movies_details_save_fragment"
                />

            <TextView
                android:id="@+id/tv_overview_movie_detail_save_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@id/view_detail_save_fragment"
                android:fontFamily="@font/amethysta"
                />

    </RelativeLayout>

</ScrollView>