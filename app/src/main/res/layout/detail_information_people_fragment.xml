<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".peopleScreen.detailInformationPeople.DetailInformationPeopleFragment">

    <ScrollView
        android:id="@+id/scroll_view_detail_people_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        >
            <RelativeLayout
                android:id="@+id/contraint_detail_people"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/iv_picture_profile_detail_information_people_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                   />
                <ImageView
                    android:id="@+id/iv_back_details_information_people_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_back"
                    android:layout_margin="15dp"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/tv_name_people_detail_information_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_below="@id/iv_picture_profile_detail_information_people_fragment"
                    />

                <TextView
                    android:id="@+id/tv_place_of_birth_detail_information_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place of Birth: "
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_below="@id/tv_name_people_detail_information_fragment"
                    />

                <TextView
                    android:id="@+id/tv_birthday_detail_information_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday: "
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_below="@id/tv_place_of_birth_detail_information_fragment"
                    />

                <View
                    android:id="@+id/view_detail_people_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_below="@id/tv_birthday_detail_information_fragment"
                    android:background="@android:color/darker_gray"
                    />
                <TextView
                    android:id="@+id/tv_overview_people_detail_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_detail_people_fragment"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/amethysta"
                    />
            </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar_load_detail_people_fragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>