<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.searchSreen.SearchFragment">

    <EditText
        android:id="@+id/et_search_fragment"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:drawableRight="@android:drawable/ic_menu_search"
        />
    <Button
        android:id="@+id/bt_search_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_toRightOf="@id/et_search_fragment"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyler_view_search_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        tools:listitem="@layout/items_movies"
        android:layout_below="@id/et_search_fragment"
        />

</RelativeLayout>